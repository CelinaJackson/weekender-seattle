<%= form_for @trip do |f| %> 
    <%= f.label "Trip Title:" %><br> 
    <%= f.text_field :title %><br> 
    <%= f.hidden_field :user_id, value: current_user.id %>

    <%= f.fields_for  :locations do |l| %> 
        <%= l.label :city %><br>
        <%= l.text_field :city %><br>

        <%= l.label :state %><br> 
        <%= l.text_field :state %><br> 

        <%= l.label :zipcode %><br> 
        <%= l.text_field :zipcode %><br> 
    <% end %> 
 
    <%= f.label "Tell us what there is to do in the area:" %><br>
    <%= f.text_area :content %><br>
 
    <%= f.submit  %>
<% end %> 