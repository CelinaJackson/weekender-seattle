
<% if @trip.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@trip.errors.count, "error") %>
    prohibited this trip from being saved:
  </h2>

  <ul>
  <% @trip.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>

<%= form_for @trip do |f| %> 
    <%= f.label "Trip Title:" %><br> 
    <%= f.text_field :title %><br> 
    <%= f.hidden_field :user_id, value: current_user.id %>

    <%= f.fields_for  :locations do |l| %> 
        <%= l.label :city %><br>
        <%= l.text_field :city %><br>

        <%= l.label :state %><br> 
        <%= l.text_field :state %><br> 

        <%= l.label :zipcode %><br> 
        <%= l.text_field :zipcode %><br> 
    <% end %> 
 
    <%= f.label "Tell us what there is to do in the area:" %><br>
    <%= f.text_area :content %><br>
 
    <%= f.submit  %>
<% end %> 